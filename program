print("task 1: sum of a list of intergers")
int_list-input=("enter intergers seperated by spaces:")
int_list=[ int(num) for num in int_list_input.split]
total_sum=sum(inter_list)
print(f"sum of the intergers:"{total_sum}\n")
      
