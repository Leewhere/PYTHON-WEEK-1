print("Task4: Common elements in two sets")
set1_input=input("enter intergers for set 1,separated by spaces:")
set2_input=input("enter intergers for set 2,separated by spaces:")
set1=set(map(int, set1_input.split()))
set2=set(map(int,set2_input.split()))
common_elements = set1&set2
print(f"common elements :{common_elements}\n")


print("Task5:Words with odd numbers of characters")
Words=["Apple","Banana","Orange","Pear","Peach","Grapes","Berries","Plum"]
odd_length_words=[word for word in words if len(word) % 2 !=0]
print(f"Words with odd number of characters:{odd_length_words}")